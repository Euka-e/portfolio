---
import ExperienceIcon from "../icons/ExperienceIcon.astro";

const experienceData = [
  {
    title: "New Web Design",
    role: "Dise√±ador Web",
    company: "ABC Corporation",
    date: "04/02/2022",
    description: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
    isLast: true,
  },
  {
    title: "21 000 Job Seekers",
    role: "Desarrollador Full Stack",
    company: "XYZ Inc.",
    date: "12/01/2022",
    description:
      "Libero expedita explicabo eius fugiat quia aspernatur autem laudantium error.",
    isLast: false,
  },
  {
    title: "Awesome Employers",
    role: "Gerente de Proyectos",
    company: " DEF Solutions",
    date: "21/12/2021",
    description:
      "Voluptatibus temporibus esse illum eum aspernatur, fugiat suscipit natus!",
    isLast: false,
  },
];
---

<h3 class="text-2xl text-gray-700 font-bold mb-6 ml-3">Experience</h3>

<ol>
  {
    experienceData.map((item, index) => (
      <li
        data-key={index}
        class={`ml-4 border-l-2 ${item.isLast ? "border-purple-600" : "border-green-600"}`}
      >
        <div class="md:flex flex-start">
          <div
            class={`bg-${item.isLast ? "purple" : "green"}-600 size-12 flex items-center justify-center rounded-full -ml-6 position-relative top-4`}
          >
            <ExperienceIcon class="position-relative top-1" />
          </div>
          <div class="block p-6 rounded-lg shadow-lg bg-gray-100 max-w-md ml-6 mb-10">
            <div class="flex justify-between mb-4">
              <div>
                <h5 class="font-medium text-purple-600 hover:text-purple-700 focus:text-purple-800 duration-300 transition ease-in-out text-sm">
                  {item.title} - {item.role}
                </h5>
                <p class="text-gray-700 text-sm">{item.company}</p>
              </div>
              <a
                href="#!"
                class="font-medium text-purple-600 hover:text-purple-700 focus:text-purple-800 duration-300 transition ease-in-out text-sm"
              >
                {item.date}
              </a>
            </div>
            <p class="text-gray-700 mb-6">{item.description}</p>
            <button
              type="button"
              class="inline-block px-4 py-1.5 bg-purple-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-purple-700 hover:shadow-lg focus:bg-purple-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-purple-800 active:shadow-lg transition duration-150 ease-in-out"
              data-mdb-ripple="true"
            >
              Preview
            </button>
            <button
              type="button"
              class="inline-block px-3.5 py-1 border-2 border-purple-600 text-purple-600 font-medium text-xs leading-tight uppercase rounded hover:bg-black hover:bg-opacity-5 focus:outline-none focus:ring-0 transition duration-150 ease-in-out"
              data-mdb-ripple="true"
            >
              See demo
            </button>
          </div>
        </div>
      </li>
    ))
  }
</ol>
